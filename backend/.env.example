# =============================================================================
# HOROSCOPO APP - Backend .env Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3030

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=horoscopo
DB_SSL=false

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=3600

# =============================================================================
# AUTHIFY INTEGRATION (optional - for external auth)
# =============================================================================
# AUTHIFY_URL=https://p9mmmtfmim.us-east-1.awsapprunner.com
# AUTHIFY_API_KEY=your-authify-api-key

# =============================================================================
# BILLING INTEGRATION (optional)
# =============================================================================
# BILLING_API_URL=https://fax3cspfgv.us-east-1.awsapprunner.com
# BILLING_FRONTEND_URL=https://billing.ohanax.com
# BILLING_PROJECT_ID=your-billing-project-id
# BILLING_API_KEY=your-billing-api-key
